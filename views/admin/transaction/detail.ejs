<%- include ../../partials/header.ejs %> 
<%- include ../../partials/navbar.ejs %> 
<%- include ../../partials/sidebar.ejs %> 

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Transaction</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/transaction">Transaction</a></li>
              <li class="breadcrumb-item active">Detail</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Detail transaction | <%= transaction.name %> </h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
            <form action="/transaction/edit/<%= transaction._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Status</label>
                  <% if(transaction.status === "success"){ %> 
                    <input type="text" disabled value="<%= transaction.status %>" name="name" class="form-control bg-success" id="coinQuantity" placeholder="Enter game name" required />
                  <% } else if(transaction.status === "pending"){ %> 
                    <input type="text" disabled value="<%= transaction.status %>" name="name" class="form-control bg-warning" id="coinQuantity" placeholder="Enter game name" required />
                  <% } else { %> 
                    <input type="text" disabled value="<%= transaction.status %>" name="name" class="form-control bg-danger" id="coinQuantity" placeholder="Enter game name" required />
                  <% } %> 
                </div>
                <div class="form-group">
                  <label for="name">Type payment</label>
                  <input type="text" disabled value="<%= transaction.historyPayment.type %> | <%= transaction.historyPayment.bankName %>" name="name" class="form-control" id="coinQuantity" placeholder="Enter game name" required />
                </div>
                <div class="form-group">
                  <label for="name">Coin name</label>
                  <input type="text" disabled value="<%= transaction.historyVoucherTopup.coinName %>" name="name" class="form-control" id="coinQuantity" placeholder="Enter game name" required />
                </div>
                <div class="form-group">
                  <label for="name">Coin Quantity</label>
                  <input type="text" disabled value="<%= transaction.historyVoucherTopup.coinQuantity %>" name="name" class="form-control" id="coinQuantity" placeholder="Enter game name" required />
                </div>
                <div class="form-group">
                  <label for="name">Price voucher</label>
                  <input type="text" disabled value="<%= transaction.historyVoucherTopup.price %>" name="name" class="form-control" id="coinQuantity" placeholder="Enter game name" required />
                </div>
                <div class="form-group">
                  <label for="name">Total price</label>
                  <input type="text" disabled value="<%= transaction.value %>" name="name" class="form-control" id="coinQuantity" placeholder="Enter game name" required />
                </div>
                <div class="form-group">
                  <img src="http://localhost:3000/uploads/<%= transaction.historyVoucherTopup.thumbnail %>" id="preview">
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <a href="/transaction" type="submit" class="btn btn-primary">Back</a>
              </div>
            </form>
              </div>
          </div>
          <!-- /.col -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %> 
<%- include ../../partials/js.ejs %> 

<script>
    function readURL (input){
        if(input.files && input.files[0]){
            const reader = new FileReader();

            reader.onload = function(e){
                $('#preview').attr('src', e.target.result);
                $('#preview').attr('width', "20%");
                $('#preview').attr('height', "20%");
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $('#image').change(function(){
        readURL(this)
    })
</script>