<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Title</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < nominal.length; i++){ %> 
      <tr>
        <td><%= i+1 %> </td>
        <td><%= nominal[i].coinName %></td>
        <td><%= nominal[i].price %></td>
        <td>
          <form action="/nominal/delete/<%= nominal[i]._id %>?_method=DELETE" method="POST">
            <a class="btn btn-warning btn-sm" href="/nominal/edit/<%= nominal[i]._id %>"><i class="fas fa-pencil-alt"></i> Edit</a>
            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</button>
          </form>
        </td>
      </tr>
    <% } %> 
  </tbody>
</table>
