<%- include ../../partials/header.ejs %> 
<%- include ../../partials/navbar.ejs %> 
<%- include ../../partials/sidebar.ejs %> 

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Player</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/player">Player</a></li>
              <li class="breadcrumb-item active">Detail</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Detail player | <%= player.name %> </h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
            <form action="/player/edit/<%= player._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Role</label>
                  <input type="text" disabled value="<%= player.role %>" name="name" class="form-control" id="coinQuantity" placeholder="Enter game name" required />
                </div>
                <div class="form-group">
                  <label for="name">Status</label>
                  <input type="text" disabled value="<%= player.status %>" name="name" class="form-control" id="coinQuantity" placeholder="Enter game name" required />
                </div>
                <div class="form-group">
                  <label for="name">Email</label>
                  <input type="text" disabled value="<%= player.email %>" name="name" class="form-control" id="coinQuantity" placeholder="Enter game name" required />
                </div>
                <div class="form-group">
                  <label for="name">Phone number</label>
                  <input type="text" disabled value="<%= player.phoneNumber %>" name="name" class="form-control" id="coinQuantity" placeholder="Enter game name" required />
                </div>
                <div class="form-group">
                  <label for="name">Username</label>
                  <input type="text" disabled value="<%= player.username %>" name="name" class="form-control" id="coinQuantity" placeholder="Enter game name" required />
                </div>
                <div class="form-group">
                  <img src="http://localhost:3000/images/<%= player.avatar %>" id="preview">
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <a href="/player" type="submit" class="btn btn-primary">Back</a>
              </div>
            </form>
              </div>
          </div>
          <!-- /.col -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %> 
<%- include ../../partials/js.ejs %> 

<script>
    function readURL (input){
        if(input.files && input.files[0]){
            const reader = new FileReader();

            reader.onload = function(e){
                $('#preview').attr('src', e.target.result);
                $('#preview').attr('width', "20%");
                $('#preview').attr('height', "20%");
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $('#image').change(function(){
        readURL(this)
    })
</script>