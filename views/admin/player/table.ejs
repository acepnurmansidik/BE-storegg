<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < players.length; i++){ %> 
      <tr>
        <td><%= i+1 %> </td>
        <td><%= players[i].name %></td>
        <td><%= players[i].email %></td>
        <td><%= players[i].role %></td>
        <td>
          <a class="btn btn-warning btn-sm" href="/player/detail/<%= players[i]._id %>"><i class="fas fa-pencil-alt"></i> Edit</a>
        </td>
      </tr>
    <% } %> 
  </tbody>
</table>
